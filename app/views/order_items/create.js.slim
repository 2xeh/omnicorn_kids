- if @order.errors.any? || @order_item.errors.any?
  | console.log("#{@order.errors.full_messages.inspect}")
  = puts "#{@order.errors.full_messages.inspect}"
  / | errors_list = " "
  / | - @order.errors.full_messages.each do |err|
  /   | errors_list = errors_list + err
  / | - @order_item.errors.full_messages.each do |err|
  /   | errors_list = errors_list + err
  / | alert(errors_list)

- else
  | console.log("#{@order.inspect}")
  = puts "#{@order.errors.full_messages.inspect}"
  | $(".cart-text").html("#{escape_javascript(render 'layouts/cart_text')}")
